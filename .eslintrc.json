{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "ignorePatterns": [
        "static/adapter.js"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "eslint-plugin-html",
        "@typescript-eslint"
    ],
    "rules": {
        "no-plusplus": "off",
        "brace-style": [
            "error",
            "1tbs"
        ],
        "indent": [
            "error",
            4
        ],
        "no-restricted-syntax": "off",
        "no-await-in-loop": "off",
        "quotes": [
            "error",
            "double"
        ],
        "max-len": [
            "error",
            120
        ],
        "curly": [
            "error",
            "all"
        ],
        "no-mixed-operators": "off",
        "no-nested-ternary": "off"
    }
}